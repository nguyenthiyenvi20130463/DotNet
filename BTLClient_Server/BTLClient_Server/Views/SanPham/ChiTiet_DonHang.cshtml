
@{
    ViewBag.Title = "ChiTiet_DonHang";
    Layout = null;
    var lstChiTietDonHang = ViewBag.lstChiTietDonHang;
}
<table class="table table-hover">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Đơn giá</th>
            <th>Số lượng</th>
            <th>Thành tiền</th>
        </tr>
    </thead>
    <tbody>
        @if (lstChiTietDonHang != null)
        {
            foreach (var item in lstChiTietDonHang)
            {
                <tr>
                    <td>
                        <img src="~/Theme/Image/@item.AnhDD" style="height: 50px">
                        <span>@item.TenSanPham</span>
                    </td>
                    <td>@item.DonGia</td>
                    <td>@item.SoLuong</td>
                    <td>@item.ThanhTien.ToString("N0")</td>
                </tr>
            }
        }
    </tbody>
</table>